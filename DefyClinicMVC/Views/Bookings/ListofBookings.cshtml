            <div class="row">
                <div class="col-lg-8 offset-lg-2">
                    <form>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Patient Name</label>
                                    @Html.DisplayFor(model => item.P_Details)

                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Appointment Time</label>
                                    @Html.DisplayFor(model => item.App_Time)
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Appointment Date</label>
                                    @Html.DisplayFor(model => item.App_Date)
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Status</label>
                                    <span class="custom-badge status-red">@Html.DisplayFor(model => item.App_Status)</span>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="m-t-20 text-center">

        @Html.ActionLink("Confirm booking", "ConfirmForUser", new { id = item.App_Id })
    </div>


