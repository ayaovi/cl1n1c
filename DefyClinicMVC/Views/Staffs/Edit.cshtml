                          new SelectListItem() {Text = "MISS", Value="MISS"},
                          new SelectListItem() {Text = "DR", Value="DR"},
                           new SelectListItem() {Text = "PROOF", Value="PROOF"}

      }, "Select Code type", new { @class = "form-control" })



