            </div>
            <div class="row">
                <div class="col-lg-8 offset-lg-2">
                    <form>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Title </label>
                                    @Html.DropDownList("Title", new List<SelectListItem>
      {

        new SelectListItem() {Text = "....Please Slect....", Value="....Please Slect...."},
                        new SelectListItem() {Text = "MR", Value="MR"},
