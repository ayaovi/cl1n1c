<div class="page-wrapper">
    <div class="content">
        <div class="row">
            <div class="col-sm-7 col-6">
                <h4 class="page-title">My Profile</h4>
            </div>
            <div class="col-sm-5 col-6 text-right m-b-30">
                <a href="@Url.Action("Edit",  new { id = Model.EmpNo})" class="btn btn-primary btn-rounded"><i class="fa fa-plus"></i> Edit Profile</a>
            </div>
        </div>
        <div class="card-box profile-header">
            <div class="row">
                <div class="col-md-12">
                    <div class="profile-view">
                        <div class="profile-img-wrap">
                            <div class="profile-img">
                                <a href="#"><img class="avatar" src="data:image/png;base64,@Convert.ToBase64String(Model.Picture, 0, Model.Picture.Length)" alt=""></a>
                            </div>
                        </div>
                        <div class="profile-basic">
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="profile-info-left">
                                        <h3 class="user-name m-t-0 mb-0">@Html.DisplayFor(model => model.EmpName) @Html.DisplayFor(model => model.EmpSurname)</h3>
                                        <small class="text-muted">@Html.DisplayFor(model => model.Role)</small>
                                        <div class="staff-id">Employee ID : @Html.DisplayFor(model => model.EmpNo)</div>
                                        <div class="staff-msg"><a href="chat.html" class="btn btn-primary">Send Message</a></div>
                                    </div>
                                </div>
                                <div class="col-md-7">
                                    <ul class="personal-info">
                                        <li>
                                            <span class="title">Phone:</span>
                                            <span class="text"><a href="#">@Html.DisplayFor(model => model.EmpTel)</a></span>
                                        </li>
                                        <li>
                                            <span class="title">Email:</span>
                                            <span class="text"><a href="#">@Html.DisplayFor(model => model.EmpEmail)</a></span>
                                        </li>
                                        <li>
                                            <span class="title">ID/Passport:</span>
                                            <span class="text">@Html.DisplayFor(model => model.ID_Pass)</span>
                                        </li>
                                        <li>
                                            <span class="title">Address:</span>
                                            <span class="text">@Html.DisplayFor(model => model.EmpAddress)</span>
                                        </li>
                                        <li>
                                            <span class="title">Gender:</span>
                                            <span class="text">@Html.DisplayFor(model => model.Gender)</span>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
